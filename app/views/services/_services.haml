%div.flash{:class => (@cflash[:type] if @cflash)}= @cflash[:message].capitalize! if @cflash

%h2 Services

%table.services
  %thead
    %tr
      %th Service
      %th Status
      %th.right= input_tag :search, :class => "search", :value => " "
  %tbody
    - @services.each do |s|
      %tr
        %td
          = image_tag 'warning-disabled.png'
          = image_tag 'wait.gif', :class=>"animation", :hidden=> true
          = s.name


        %td.status{:class=>("green" if s.status == "running")}= s.status
        %td.right
          -if s.status == "running"
            = link_to "stop", " ", "data-name" => s.name, "data-action" => "stop", :remote => true
          - else
            = link_to "start", " ", "data-name" => s.name, "data-action" => "start", :update => 'services', :remote => true
    %tr#noresults
      %td{:colspan => 4}
        %h6 No results!
